{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@api/*": ["api/*"],
            "@config/*": ["config/*"],
            "@middlewares/*": ["middlewares/*"],
            "@models/*": ["models/*"],
            "@utils/*": ["utils/*"],
            "@mock/*": ["mock/*"]
        }
    }
}
